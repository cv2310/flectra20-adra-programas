<?xml version="1.0" encoding="utf-8"?>
<flectra>
    <data>
        <record id="account_analytic_account_inherit_list_adra_account_extended" model="ir.ui.view">
            <field name="name">account.analytic.account.view.list.inherit</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="x_sub_account_code_income"/>
                </xpath>
                <xpath expr="//field[@name='x_sub_account_code_income']" position="after">
                    <field name="x_sub_account_code_expense"/>
                </xpath>
                <xpath expr="//field[@name='x_sub_account_code_expense']" position="after">
                    <field name="x_function_code"/>
                </xpath>
            </field>
        </record>
        <record id="account_analytic_account_inherit_form_adra_account_extended" model="ir.ui.view">
            <field name="name">account.analytic.account.view.form.inherit</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="after">
                    <field name="x_sub_account_code_income"/>
                </xpath>
                <xpath expr="//field[@name='x_sub_account_code_income']" position="after">
                    <field name="x_sub_account_code_expense"/>
                </xpath>
                <xpath expr="//field[@name='x_sub_account_code_expense']" position="after">
                    <field name="x_function_code"/>
                </xpath>
            </field>
        </record>
    </data>
</flectra>
